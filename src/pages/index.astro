---
import { Image } from 'astro:assets'
import carlosImage from '../assets/carlos.png'
import psybitcoinImage from '../assets/psybitcoin.png'
import spameImage from '../assets/spame.png'
import kurikaImage from '../assets/kurika.png'

import Layout from '../layouts/Layout.astro'
import Button from '../components/Button.vue'
import CopyButton from '../components/CopyButton.vue'
import ProjectCard from '../components/ProjectCard.vue'
import ViewButton from '../components/ViewButton.vue'
import LetsWorkTogether from '../components/LetsWorkTogether.vue'
import TheFooter from '../components/TheFooter.vue'
---

<Layout title="Portfolio | Carlos Marques" page="home">
  <div class="rounded-lg bg-brand-lightest relative">
    <div class="flex flex-col p-8">
      <div class="flex gap-3 items-center">
        <div
          class="bg-orange-500 w-2 h-2 rounded-full animate-pulse motion-reduce:animate-none"
        >
        </div>
        <h2 class="font-medium text-xl">Software Engineer & Designer</h2>
      </div>
      <div class="flex flex-col gap-3 mt-10">
        <h1 class="font-semibold text-4xl">Carlos Marques</h1>
        <p class="text-brand-grayDark text-sm">
          Software Engineer & Designer from Portugal.<br />
           I create beautiful and performant products.<br />
           Also teach about Bitcoin.
        </p>
        <ul class="flex gap-4 items-center">
          <Button to="/contact/" text="Contact Me" variant="primary" />
          <CopyButton
            client:load
            text="Copy Email"
            copyText="psycarlo1@gmail.com"
          />
        </ul>
      </div>
      <div class="absolute top-4 right-6 drop-shadow-2xl">
        <img src={carlosImage.src} alt="Carlos Marques" />
      </div>
    </div>
    <div
      class="flex flex-col gap-6 rounded-lg bg-brand-lighter mt-10 mb-3 p-6 mx-2 relative z-10"
    >
      <div class="flex justify-between">
        <div class="flex gap-2 items-center">
          <div
            class="bg-orange-500 w-2 h-2 rounded-full animate-pulse motion-reduce:animate-none"
          >
          </div>
          <h2 class="font-medium text-xl">Projects</h2>
        </div>
        <ViewButton />
      </div>
      <div class="flex flex-col gap-2">
        <ProjectCard
          title="Psybitcoin"
          type="Learning platform, Bitcoin education"
          to="/projects/psybitcoin/"
        >
          <img src={psybitcoinImage.src} alt="Psybitcoin" />
        </ProjectCard>
        <ProjectCard
          title="Spame"
          type="Content creation, AI tool"
          to="/projects/spame/"
        >
          <img src={spameImage.src} alt="Spame" />
        </ProjectCard>
        <ProjectCard
          title="Kurika"
          type="Social media, Proof of concept"
          to="/projects/kurika/"
        >
          <img src={kurikaImage.src} alt="Kurika" />
        </ProjectCard>
      </div>
    </div>
    <div
      class="flex flex-col gap-6 rounded-lg bg-brand-lighter p-6 mx-2 relative z-10"
    >
      <div class="flex justify-between">
        <div class="flex gap-2 items-center">
          <div
            class="bg-orange-500 w-2 h-2 rounded-full animate-pulse motion-reduce:animate-none"
          >
          </div>
          <h2 class="font-medium text-xl">Technologies</h2>
        </div>
        <ViewButton to="/technologies/" />
      </div>
    </div>
    <LetsWorkTogether client:visible />
    <TheFooter />
  </div>
</Layout>
