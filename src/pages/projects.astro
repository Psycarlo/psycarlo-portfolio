---
import { Image } from 'astro:assets'

import psybitcoinImage from '../assets/psybitcoin.png'
import spameImage from '../assets/spame.png'
import medusaImage from '../assets/medusa.png'
import satsignerImage from '../assets/satsigner.png'
import kurikaImage from '../assets/kurika.png'
import yearlyImage from '../assets/yearly.png'
// import lotusImage from '../assets/lotus.png'
import psyuiImage from '../assets/psyui.png'

import Layout from '../layouts/Layout.astro'
import WrapperLayout from '../layouts/WrapperLayout.vue'
import ContentLayout from '../layouts/ContentLayout.vue'
import ProjectCard from '../components/ProjectCard.vue'
---

<Layout title="Projects | Carlos Marques" page="projects">
  <WrapperLayout
    topic="Projects"
    title="My Works"
    description="Get to know the projects I worked on. My work strives to give users a memorable experience."
    client:load
  >
    <ContentLayout>
      <ProjectCard
        title="Psybitcoin"
        type="Learning platform, Bitcoin education"
        to="/projects/psybitcoin/"
      >
        <Image
          src={psybitcoinImage}
          alt="Psybitcoin"
          transition:name="psybitcoin"
        />
      </ProjectCard>
      <ProjectCard
        title="SatSigner"
        type="Open source, Bitcoin App"
        to="/projects/satsigner/"
      >
        <Image src={satsignerImage} alt="SatSigner" />
      </ProjectCard>
      <ProjectCard
        title="Medusa Wallet"
        type="Open source, Bitcoin Lightning Wallet"
        to="/projects/medusawallet/"
      >
        <Image src={medusaImage} alt="Medusa Wallet" />
      </ProjectCard>
      <ProjectCard
        title="Psyui"
        type="Open source, Vue components"
        to="/projects/psyui/"
      >
        <Image src={psyuiImage} alt="Psyui" />
      </ProjectCard>
      <ProjectCard
        title="Kurika"
        type="Social media, Proof of concept"
        to="/projects/kurika/"
      >
        <Image src={kurikaImage} alt="Kurika" />
      </ProjectCard>
      <ProjectCard
        title="Yearly"
        type="Ecommerce, Self-care journaling"
        to="/projects/yearly/"
      >
        <Image src={yearlyImage} alt="Yearly" />
      </ProjectCard>
      <ProjectCard
        title="Spame"
        type="Content creation, AI tool"
        to="/projects/spame/"
      >
        <Image src={spameImage} alt="Spame" />
      </ProjectCard>
    </ContentLayout>
  </WrapperLayout>
</Layout>
