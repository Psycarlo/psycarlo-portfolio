---
import { Image } from 'astro:assets'

import Layout from '../layouts/Layout.astro'
import WrapperLayout from '../layouts/WrapperLayout.vue'
import ContentLayout from '../layouts/ContentLayout.vue'
import BitcoinCard from '../components/BitcoinCard.vue'

import splash from '../assets/splash.png'
import qr from '../assets/qr.png'
import qrln from '../assets/qrln.png'
---

<Layout title="Bitcoin | Carlos Marques" page="bitcoin">
  <WrapperLayout
    topic="Bitcoin"
    title="Absolute Scarcity"
    description="Bitcoin is the hardest money in the world. It brings peace, love, hope and freedom to the human race."
    client:load
  >
    <ContentLayout>
      <BitcoinCard client:visible>
        <Image
          src={splash}
          alt="Psybitcoin Splash"
          class="rounded-lg shadow-md"
        />
        <Image
          src={qr}
          alt="Bitcoin Adress QR Code"
          class="rounded-lg duration-300 hover:scale-[1.02] transition-transform"
          slot="qr"
        />
        <Image
          src={qrln}
          alt="Lightning Adress QR Code"
          class="rounded-lg duration-300 hover:scale-[1.02] transition-transform"
          slot="qrln"
        />
      </BitcoinCard>
    </ContentLayout>
  </WrapperLayout>
</Layout>
